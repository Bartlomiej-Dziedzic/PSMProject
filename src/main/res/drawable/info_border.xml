<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tło z delikatnym gradientem -->
    <gradient
        android:startColor="#202020"
    android:endColor="#404040"
    android:angle="270" />

    <!-- Obramowanie -->
    <stroke
        android:width="2dp"
        android:color="#3A87AD"/>

    <!-- Zaokrąglone rogi -->
    <corners android:radius="12dp" />

    <!-- Padding wewnętrzny -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>